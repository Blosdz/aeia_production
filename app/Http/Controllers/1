<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\Fondo;
use App\Models\Payment;
use App\Models\Profile;
use App\Models\Contract;
use App\Models\Plan;
use App\Models\User;

class FondoController extends Controller
{
    //
    public function index(){
        $totalCollected = Payment::where('status', 'PENDIENTE')->sum('total');
        return view('admin_funciones.fondo_general', compact('totalCollected'));
        
    }
    public function store(Request $request)
    {

        $totalCollected = Payment::where('status', 'PENDIENTE')->sum('total');
        $request->validate([
            'month' => 'required',
            'total' => 'required|numeric',
            'collected' => 'required|numeric',
        ]);

        $netoBruto = $request->collected - $totalCollected;

        // Guardar el monto en la tabla AmountsModel
        AmountsModel::create([
            'month' => $request->month,
            'total' => $request->total,
            'collected' => $request->collected,
            'renta' => $netoBruto,
            'total_comisiones' => null,
        ]);


        // Actualizar el total recaudado en la tabla Payment

        return redirect()->route('extraViews.amounts')->with('success', 'Monto agregado correctamente');
    }
}
